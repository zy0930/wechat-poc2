# WeChat Official Account Configuration
WECHAT_APPID=your_wechat_app_id_here
WECHAT_SECRET=your_wechat_app_secret_here
WECHAT_TOKEN=your_verification_token_here

# Template Message ID
# You need to create this template in WeChat Official Account platform
# Guest confirmation template should have fields: booking ID, name, phone, date
WECHAT_TEMPLATE_GUEST=your_guest_template_id_here

# Server Configuration
SERVER_URL=https://your-server-domain.com
FRONTEND_URL=https://your-frontend-domain.com
PORT=3001

# Session Secret
SESSION_SECRET=your-random-session-secret-here

# Environment
NODE_ENV=production

# React App Configuration (for client/.env)
# REACT_APP_API_URL=https://your-server-domain.com